{% extends "admin/layout.twig" %}

{% block adminSubtitle %}Σχολείων{% endblock %}

{% block adminContent %}
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Ονομασία</th>
                </tr>
            </thead>
            <tbody>
            {% for school in schools %}
                <tr>
                    <td>{{ school.name }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="1" class="text-center">Δεν υπάρχουν σχολεία</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}